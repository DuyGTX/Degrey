@model Degrey.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
    <link href="~/Content/sanpham.css" rel="stylesheet" />
}
<div class="container">
    <h2 style="font-family:sans-serif">Chỉnh sửa</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style=" padding: 14px;">Product</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProID)

            <div class="form-group">
                @Html.LabelFor(model => model.ProName, htmlAttributes: new { @class = "control-label col-md-2" })
