                <div class="col-md-offset-2 col-md-10" style="display: grid; padding-left: 30%; padding-right: 148px; ">
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    }

    <div style=" display: grid; padding-left: 30%; padding-right: 30%;">
        @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-outline-danger" })
    </div>
</div>
